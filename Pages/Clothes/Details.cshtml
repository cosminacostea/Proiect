@page
@model Proiect.Pages.Clothes.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Clothing</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clothing.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clothing.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clothing.Seller)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clothing.Seller)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clothing.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clothing.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clothing.DateAdded)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clothing.DateAdded)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clothing.Brand.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Clothing.Brand.BrandName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Clothing.ClothingCategories)
        </dt>
        <dd class="col-sm-10">
            @{
                foreach (var category in Model.Clothing.ClothingCategories)
                {
                    @category.Category.ID @: @category.Category.CategoryName <br />
                }
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Clothing.ID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
